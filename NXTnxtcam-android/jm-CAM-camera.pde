KetaiCamera cam;

//==FUNCTIONS============================================================================================================================
//---------------------------------------------------------------------------------------------------------------------------------------
void jm_CAMcreate(int cam_width, int cam_height, int frame_rate)
{
  cam = new KetaiCamera(this,cam_width, cam_height, frame_rate);
}
//---------------------------------------------------------------------------------------------------------------------------------------
void jm_CAMstart()
{
  if (cam.isStarted()) { println("cam has already started"); }                //****** put this somewhere else e.g. put back a switch for cam_starting  ****** 
  else { cam.start(); println("starting cam"); }        // start webcam
}
//---------------------------------------------------------------------------------------------------------------------------------------
PImage jm_CAMget()
{
  return cam;
}
//---------------------------------------------------------------------------------------------------------------------------------------
void onCameraPreviewEvent()    // this function is called automatically once the camera is started
{
  cam.read();                  // update camera view
//  image(cam, 0, 0);          // this doesn't work when i start to wrap the bluetooth stuff, it only works in draw() :-S ketai is too finicky!!!
}
//---------------------------------------------------------------------------------------------------------------------------------------
void jm_CAMstop()
{
  if (cam.isStarted()) { cam.stop(); }
}
